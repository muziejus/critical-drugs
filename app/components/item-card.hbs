<li>
  <dl>
    <dt>Id</dt>
    <dd>{{@item.id}}</dd>
    <dt>Featured</dt>
    <dd>{{@item.featured}}</dd>
    <dt>Public</dt>
    <dd>{{@item.public}}</dd>
    <dt>Added</dt>
    <dd>{{@item.added}}</dd>
    <dt>Modified</dt>
    <dd>{{@item.modified}}</dd>
    <dt>Item Type</dt>
    <dd>{{@item.itemType.id}}, {{add @item.itemType.id 2}}</dd>
    <dt>Collection Id</dt>
    <dd>{{this.collection.id}}</dd>
    <dt>Tags</dt>
    <dd>
      {{#each @item.tags as |tag|}}
        {{tag.name}},
      {{/each}}
    </dd>
  </dl>
</li>
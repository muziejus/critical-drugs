<LeafletMap 
  @lat={{this.lat}} 
  @lng={{this.lng}} 
  @zoom={{this.zoom}} 
  ...attributes
   as |layers|>
  <layers.tile @url="https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"/>
  {{#each this.points as |point|}}
      {{#let (convert-coordinates point.coverage) as |coordinates|}}
      <layers.marker @lat={{coordinates.latitude}}
        @lng={{coordinates.longitude}}
        @title={{point.itemTitle}}
        as |marker|>
          <marker.popup>
            <MapCard @point={{point}} />
          </marker.popup>
        </layers.marker>
      {{/let}}
  {{/each}}

</LeafletMap>


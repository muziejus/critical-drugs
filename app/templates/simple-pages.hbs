<div class="px-10 w-full">
  <h2 class="text-2xl">Simple Pages</h2>

  <div class="w-full flex flex-row space-x-3">
    <div class="bg-zinc-100 w-1/3 text-sm">
      <ul>
        {{#each @model as |simplePage|}}
          <li>
            <LinkTo
              @route="simple-pages.simple-page"
              @model={{simplePage}}
            >
              {{simplePage.title}}
            </LinkTo>
          </li>
        {{/each}}
      </ul>
    </div>
    <div class="prose">
      {{outlet}}
    </div>
  </div>
</div>
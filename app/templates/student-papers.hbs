<div class="px-10 w-full">
  <h2 class="text-2xl">Student Papers</h2>

  <div class="w-full flex flex-row space-x-3">
    <div class="bg-zinc-100 w-1/3 text-sm prose px-3">
      <ul>
        {{#each @model as |studentPaper|}}
          <li>
            <LinkTo
              @route="student-papers.student-paper"
              @model={{concat studentPaper.id "-" studentPaper.slug}}
            >
              {{studentPaper.title}}
            </LinkTo>
          </li>
        {{/each}}
      </ul>
    </div>
    <div>
      {{outlet}}
    </div>
  </div>
</div>